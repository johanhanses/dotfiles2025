font_size 12

modify_font cell_height 120%
modify_font strikethrough_position 120%

map alt+left send_text all \x1b\x62
map alt+right send_text all \x1b\x66

map cmd+left send_text all \x01
map cmd+right send_text all \x05

cursor_blink_interval 1

window_padding_width 4

background_opacity 0.98
# Mac
# hide_window_decorations titlebar-only
# Linux
# hide_window_decorations yes 

window_border_width 2pt
# wayland_titlebar_color background

# cursor #911

remember_window_size yes

initial_window_width 1880

initial_window_height 1400

enable_audio_bell no

# BEGIN_KITTY_THEME
# One Half Light
include current-theme.conf
# END_KITTY_THEME


# BEGIN_KITTY_FONTS
font_family      family='SauceCodePro Nerd Font' style=SemiBold
bold_font        family='SauceCodePro Nerd Font' style=Bold
italic_font      family='SauceCodePro Nerd Font' style='SemiBold Italic'
bold_italic_font family='SauceCodePro Nerd Font' style='Bold Italic'
# END_KITTY_FONTS
